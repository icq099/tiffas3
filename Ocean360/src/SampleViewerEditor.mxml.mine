<mx:Script
	>
	<![CDATA[
		import assets.model.HotPointStructManager;
		import mx.core.UIComponent;
		public var sp:SamplePanel;
		public var hpsm:HotPointStructManager=new HotPointStructManager();//所要上传的数据结构
		private function init():void
		{
			sp=new SamplePanel();
			//下面是界面代码
