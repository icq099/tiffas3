<?xml version="1.0" encoding="utf-8"?>
<mx:Application creationComplete="init()" xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute">
<mx:Script>
	<![CDATA[
		import yzhkof.ToolBitmapData;
		import yzhkof.Toolyzhkof;
		import other.EffectPv3dRota;
		import yzhkof.effect.MyEffect;
		import mx.containers.Panel;
		private var p:Panel;
		private function init():void{
			p=new Panel();
			//p.initialize();
			p.width=500;
			p.height=500;
			//addChild(Toolyzhkof.mcToUI(new Bitmap(ToolBitmapData.getInstance().drawDisplayObject(p))));
			
		}
		private function onRemove():void{
			MyEffect.removeChild(new EffectPv3dRota(container,p,1,false,EffectPv3dRota.ANGLE_UP,0,0.5));
		}
		private function onAdd():void{
			MyEffect.addChild(new EffectPv3dRota(container,p,1,true,EffectPv3dRota.ANGLE_DOWN));
		}
	]]>
</mx:Script>
	<mx:Button id="btn_add" x="95" label="addChild" bottom="10" click="onAdd()"/>
	<mx:Button id="btn_reamove" x="211" label="removeChild" bottom="10" click="onRemove()"/>
	<mx:Canvas id="container" left="10" right="10" top="10" bottom="40">
	</mx:Canvas>
	
</mx:Application>
